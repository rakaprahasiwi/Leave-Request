        jQuery('.complex-colorpicker').datepicker({
            format: 'yyyy-mm-dd',
            autoclose: true,
            todayHighlight: true
        });
    </script>

    <script src="~/Scripts/Employee/LeaveRequestEmployee/LeaveRequestEmployeeScript.js"></script>
