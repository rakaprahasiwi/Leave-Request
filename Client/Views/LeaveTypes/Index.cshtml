
@{
    Layout = "~/Views/Shared/AdminLayout/_LayoutAdministrator.cshtml";
    ViewBag.Title = "Index";
}

<div class="card">
    <div class="card-body">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="ClearScreen();">Create New</button><br /><br />
        <table class="table table-bordered table-striped dataTable no-footer" role="grid" aria-describedby="myTable_info" id="tableLeaveType">
            <thead>
                <tr>
                    <th>NO.</th>
                    <th>NAME</th>
                    <th>DURATION</th>
                    <th>NOTE</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>
    </div>
</div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Leave Type Form</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="Id">Id</label>
                            <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" id="Name" placeholder="Leave Type Name" />
                        </div>
                        <div class="form-group">
                            <label for="Duration">Duration</label>
                            <input type="number" class="form-control" min="1" id="Duration" placeholder="Duration" />
                        </div>
                        <div class="form-group">
                            <label for="Note">Note</label>
                            <select class="custom-select col-12" id="Note">
                                <option selected="">Choose</option>
                                <option value="Special Leave">Special Leave</option>
                                <option value="Normal Leave">Normal Leave</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="Save" onclick="Validate();">Add</button>
                    <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="Validate();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{
        <script src="~/Content/jquery/jquery.min.js"></script>
        <script src="~/Content/assets/plugins/bootstrap/js/bootstrap.js"></script>>
        <script src="~/Content/sweetalert/sweetalert.min.js"></script>
        <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
        <script src="~/Content/datatables/jquery.dataTables.min.js"></script>
        <link href="~/Content/datatables/jquery.dataTables.min.css" rel="stylesheet" />
        <script src="~/Scripts/Manager/LeaveTypes/LeaveTypesScript.js"></script>
        @Scripts.Render("~/bundles/jqueryval")
    }

